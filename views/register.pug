extends layout

include utils

block content
  +validationErrorSummary(errors)
  div(class='content')
    div(class='top-div')
    div(class='content__center')
      div(class='register-form')
        form(action='/register', method='post' )
          input(type='hidden', name='_csrf', value=csrfToken)
          +field('First Name', 'firstName', firstName)
          +field('Last Name', 'lastName', lastName)
          +field('Username', 'username', username)
          +field('Email', 'email', email)
          +field('Password', 'password', null, 'password')
          +field('Confirm Password', 'confirmPassword', null, 'password')
          div(class='buttons')
            button(type='submit', class='register__button') Register
            button(type='submit', class='cancel__register')
              a(href='/', class='') Cancel
